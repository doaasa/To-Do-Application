<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:background="@color/backgroungColor">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroungColor"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="230dp"
        android:layout_height="130dp"
        android:background="#E2DEEA"
        android:scaleType="fitXY"
        android:src="@drawable/to_do_list_nothing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="1dp" />


    <ImageButton
        android:id="@+id/btnToggleDark"
        android:layout_width="82dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="74dp"
        android:scaleType="fitCenter"
        android:src="@drawable/cf4ddb205c2ffe11add407e8fe1dd67a"
        app:layout_constraintBottom_toTopOf="@+id/create_edt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/create_edt"
        android:layout_width="402dp"
        android:layout_height="82dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="29dp"
        android:autofillHints=""
        android:background="#CACDDF"
        android:fontFamily="casual"
        android:hint="Enter New To Do"
        android:importantForAutofill="no"

        android:padding="15dp"
        android:textAlignment="center"
        android:textColor="@color/specificColor"
        android:textColorHint="@color/specificColor"
        android:textSize="30sp"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/todo_id_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        tools:ignore="MissingConstraints" />


    <EditText

        android:id="@+id/todo_id_text"
        android:layout_width="294dp"
        android:layout_height="66dp"
        android:layout_marginVertical="8dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="40dp"
        android:autofillHints=""
        android:background="#CACDDF"
        android:fontFamily="casual"
        android:hint="Delete Selected Number"
        android:importantForAutofill="no"
        android:padding="15dp"
        android:textAlignment="center"
        android:textColor="@color/specificColor"
        android:textColorHighlight="@color/specificColor"
        android:textColorHint="@color/specificColor"
        android:textColorLink="@color/specificColor"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/create_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_edt"
        tools:ignore="DuplicateIds,MissingConstraints" />


    <Button

        android:id="@+id/delete_btn"
        android:layout_width="154dp"
        android:layout_height="59dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="23dp"
        android:backgroundTint="#5C4F63"
        android:text="Delete"
        android:textColor="#F4EFEF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/retrieve_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/create_btn"
        app:layout_constraintTop_toBottomOf="@+id/todo_id_text"
        tools:ignore="MissingConstraints" />

    <Button

        android:id="@+id/create_btn"
        android:layout_width="154dp"
        android:layout_height="59dp"
        android:layout_marginVertical="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="23dp"
        android:backgroundTint="#5C4F63"
        android:text="Save"
        android:textColor="#F4EFEF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/retrieve_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todo_id_text"
        app:layout_constraintVertical_bias="0.545"
        tools:ignore="MissingConstraints" />

    <TextView

        android:id="@+id/retrieve_txt"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginVertical="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/abril_fatface"
        android:hint="TODO DATA"
        android:textAlignment="viewStart"
        android:textColor="@color/textColor"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_btn"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>